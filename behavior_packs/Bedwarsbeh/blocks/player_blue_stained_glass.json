{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "bedwars:player_blue_stained_glass"
		},
		"components": {
			"minecraft:destroy_time": 0.25,
			"minecraft:block_light_absorption": 0,
			"minecraft:material_instances": {
				"*": {
					"render_method": "blend",
					"texture": "player_blue_stained_glass"
				}
			},
			"minecraft:on_placed": {
				"event": "bedwars:spawn_block_mark"
			}
		},
		"events": {
			"bedwars:spawn_block_mark": {
				"run_command": {
					"command": [
						"summon bedwars:block_mark ~ ~ ~",
						"event entity @e[type=bedwars:block_mark] bedwars:mark_spawned"
					],
					"target": "self"
				}
			}
		}
	}
}