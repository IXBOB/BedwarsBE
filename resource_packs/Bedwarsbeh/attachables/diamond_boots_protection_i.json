{
	"format_version": "1.8.0",
	"minecraft:attachable": {
		"description": {
			"identifier": "bedwars:diamond_boots_protection_i",
			// These 2 are default and are requiblue
			"materials": {
				"default": "armor",
				"enchanted": "armor_enchanted"
			},
			"textures": {
				// This is our CUSTOM armor texture we need to make next
				"default": "textures/models/armor/diamond_armor_main",
				// This texture doesn't actually exist in our RP
				// but it will blow up without it so leave it in
				"enchanted": "textures/misc/enchanted_item_glint"
			},
			// We tell it what geometry to use for the boots
			"geometry": {
				"default": "geometry.player.armor.boots"
			},
			// We tell it to hide the feet layer as we will be showing our armor on top
			"scripts": {
				"parent_setup": "variable.feet_layer_visible = 0.0;"
			},
			// We tell it what controller to use (default armor one)
			"render_controllers": ["controller.render.armor"]
		}
	}
}